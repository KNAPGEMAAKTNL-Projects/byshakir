---
const currentYear = new Date().getFullYear();
---

<footer
    class="bg-brand-black text-brand-text pt-24 pb-12 px-6 md:px-12 border-t border-brand-text/5"
>
    <div
        class="max-w-[1920px] mx-auto grid grid-cols-1 md:grid-cols-4 gap-12 mb-20"
    >
        <!-- Brand -->
        <div class="col-span-1 md:col-span-1">
            <h3 class="text-2xl font-heading font-bold mb-6 text-brand-gold">
                BY SHAKIR
            </h3>
            <p class="text-sm leading-relaxed text-brand-text/60 max-w-xs">
                International Design Authority defining metropolitan luxury
                living spaces with over 15 years of experience.
            </p>
        </div>

        <!-- Locations -->
        <div>
            <h4
                class="text-xs font-bold uppercase tracking-widest text-brand-gold mb-6"
            >
                Locations
            </h4>
            <ul class="space-y-4 text-sm text-brand-text/80">
                <li>
                    <span class="block text-brand-text text-white"
                        >The Netherlands (HQ)</span
                    >
                    <span class="block text-brand-text/60"
                        >Gijsbert Stoutweg 8, Tiel</span
                    >
                </li>
                <li>
                    <span class="block text-brand-text text-white">Morocco</span
                    >
                    <span class="block text-brand-text/60"
                        >Tanger <span class="text-brand-gold/60 italic ml-1"
                            >(Coming Soon)</span
                        ></span
                    >
                </li>
            </ul>
        </div>

        <!-- Contact -->
        <div>
            <h4
                class="text-xs font-bold uppercase tracking-widest text-brand-gold mb-6"
            >
                Contact
            </h4>
            <ul class="space-y-4 text-sm text-brand-text/80">
                <li>
                    <a
                        href="mailto:info@byshakir.nl"
                        class="hover:text-white transition-colors"
                        >info@byshakir.nl</a
                    >
                </li>
                <li>
                    <a
                        href="tel:+31344655473"
                        class="hover:text-white transition-colors"
                        >+31 (0)344 655 473</a
                    >
                </li>
                <li>
                    <a
                        href="https://wa.me/31618658059"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-white transition-colors">WhatsApp</a
                    >
                </li>
            </ul>
        </div>

        <!-- Socials -->
        <div>
            <h4
                class="text-xs font-bold uppercase tracking-widest text-brand-gold mb-6"
            >
                Social
            </h4>
            <ul class="space-y-4 text-sm text-brand-text/80">
                <li>
                    <a
                        href="https://www.instagram.com/byshakir_interiors"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-white transition-colors">Instagram</a
                    >
                </li>
                <li>
                    <a
                        href="https://www.facebook.com/byshakir"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-white transition-colors">Facebook</a
                    >
                </li>
                <li>
                    <a
                        href="https://www.threads.com/@byshakir_interiors"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-white transition-colors">Threads</a
                    >
                </li>
            </ul>
        </div>
    </div>

    <!-- Bottom -->
    <div
        class="max-w-[1920px] mx-auto pt-8 border-t border-brand-text/5 flex flex-col md:flex-row justify-between items-center text-xs text-brand-text/40 uppercase tracking-widest"
    >
        <div class="flex flex-col md:flex-row items-center gap-4 md:gap-8">
            <p>&copy; {currentYear} By Shakir.</p>
            <p>
                Built by <a
                    href="https://knapgemaakt.nl"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:text-brand-gold transition-colors"
                    >KNAP GEMAAKT</a
                >.
            </p>
        </div>
        <div class="mt-4 md:mt-0 space-x-6">
            <a href="/legacy/" class="hover:text-brand-text transition-colors"
                >Privacy</a
            >
            <a href="/terms/" class="hover:text-brand-text transition-colors"
                >Terms</a
            >
        </div>
    </div>
</footer>
